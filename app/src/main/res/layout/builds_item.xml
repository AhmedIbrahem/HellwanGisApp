<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:id="@+id/popup"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:background="@drawable/gradiant7"
        android:orientation="vertical" >


            <TextView
                android:id="@+id/poptitle"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#a38612"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:maxWidth="200dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/popwidth"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textColor="#b4341d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build Width"
            android:textSize="15sp"

            />
        <TextView
            android:id="@+id/popheight"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textColor="#b4341d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build Height"
            android:textSize="15sp"

            />
        <TextView
            android:id="@+id/popDetails"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="news Date"
            android:textSize="18sp"
            android:layout_marginBottom="40dp"

            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
    android:id="@+id/showinmap"
        android:layout_marginLeft="10dp"
    android:layout_marginTop="40dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:visibility="visible"
    android:layout_height="wrap_content"
    android:text="Show in Map"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/showDetails"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Offers And Menu" />


</LinearLayout>


    </LinearLayout>
</ScrollView>