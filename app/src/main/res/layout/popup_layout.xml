<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="horizontal">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:id="@+id/popup"
    android:layout_height="400dp"
    android:background="@drawable/back_g1"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/poptitle"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Title"
        android:textColor="#a38612"
        android:textSize="20dp"
        android:maxWidth="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/popdate"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:textColor="#b4341d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="news Date"
        android:textSize="15sp"

        />
</LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:minHeight="100dp"
        android:maxHeight="200dp"
        android:minWidth="150dp"
        android:maxWidth="350dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/popimg"
        android:layout_marginRight="20dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/popmessage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textColor="#1258a3"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:text="message discription" />

    <Button
        android:id="@+id/close"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:text="Close" />

</LinearLayout>
</ScrollView>